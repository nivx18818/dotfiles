{
  "window.commandCenter": false,
  "window.menuBarVisibility": "hidden",
  "window.menuStyle": "custom",
  "window.title": "${dirty}${rootName}${separator}${activeEditorShort}${separator}${activeFolderMedium}",
  "window.titleSeparator": " â¯Œ ",
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "never",
  "window.zoomLevel": 0.5,

  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Vesper",
  "workbench.colorCustomizations": {
    "editorBracketMatch.border": "#00000000",

    "[poimandres]": {
      "disabledForeground": "#767c9d",

      "editorBracketHighlight.foreground3": "#e4f0fb",
      "editorBracketHighlight.foreground2": "#a6accd",
      "editorBracketHighlight.foreground1": "#a6accd",
      "editorBracketMatch.background": "#303340",
      "editorIndentGuide.activeBackground1": "#7390aaaa",

      "activityBarTop.background": "#1b1e28",
      "activityBarTop.foreground": "#a6accd",
      "activityBarTop.activeBorder": "#a6accd",
      "activityBarTop.dropBorder": "#a6accd",
      "activityBarTop.inactiveForeground": "#a6accd66",

      "notebook.cellBorderColor": "#a6accd",
      "notebook.focusedCellBorder": "#5de4c7",
      "notebook.focusedEditorBorder": "#5de4c7",

      "scmGraph.historyItemHoverLabelForeground": "#ffffff"
    },

    "[Vesper]": {
      "editorBracketMatch.background": "#ffffff25",
      "editorIndentGuide.background1": "#ffffff15",
      "editorIndentGuide.activeBackground1": "#ffffff25",

      "terminal.background": "#101010",
      "terminal.selectionBackground": "#323232",
      "terminal.foreground": "#fff",
      "terminalCursor.foreground": "#fff",
      "terminal.ansiBlack": "#101010",
      "terminal.ansiBlue": "#59a4f9",
      "terminal.ansiCyan": "#99ffe4",
      "terminal.ansiGreen": "#99ffe4",
      "terminal.ansiMagenta": "#ffc799",
      "terminal.ansiRed": "#ff8080",
      "terminal.ansiWhite": "#fff",
      "terminal.ansiYellow": "#ffc799",
      "terminal.ansiBrightBlack": "#505050",
      "terminal.ansiBrightBlue": "#75beff",
      "terminal.ansiBrightCyan": "#99ffe4",
      "terminal.ansiBrightGreen": "#99ffe4",
      "terminal.ansiBrightMagenta": "#ffcfa8",
      "terminal.ansiBrightRed": "#ff8080",
      "terminal.ansiBrightWhite": "#fff",
      "terminal.ansiBrightYellow": "#ffcfa8"
    }
  },
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.showTabs": "single",
  "workbench.iconTheme": "symbols",
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.navigationControl.enabled": false,
  "workbench.panel.showLabels": false,
  "workbench.remoteIndicator.showExtensionRecommendations": false,
  "workbench.sideBar.location": "right",
  "workbench.secondarySideBar.showLabels": false,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.renderIndentGuides": "none",

  "breadcrumbs.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.fontFamily": "'DankMono Nerd Font Mono', Consolas, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.fontLigatures": false,
  "editor.lineHeight": 2,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorWidth": 3,
  "editor.cursorStyle": "line",
  "editor.cursorSurroundingLines": 10,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.lineNumbers": "relative",
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.guides.indentation": false,
  "editor.matchBrackets": "always",
  "editor.stickyScroll.enabled": false,
  "editor.minimap.enabled": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.codeLens": false,
  "editor.lightbulb.enabled": "off",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.defaultFormatter": "none",

  "chat.editor.lineHeight": 1.8,
  "chat.editor.wordWrap": "on",
  "chat.math.enabled": true,
  "chat.mcp.gallery.enabled": true,

  "explorer.compactFolders": false,

  "git.postCommitCommand": "push",
  "scm.diffDecorations": "gutter",
  "scm.defaultViewMode": "tree",
  "scm.compactFolders": false,

  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "extensions.ignoreRecommendations": true,

  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.initialHint": false,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.quickSuggestions": true,
  "terminal.integrated.suggest.suggestOnTriggerCharacters": true,
  "terminal.integrated.tabs.enabled": true,

  "files.associations": {
    "*.css": "tailwindcss",
    ".sequelizerc": "javascript",
    "page.ts": "typescriptreact",
    "layout.ts": "typescriptreact",
    "not-found.ts": "typescriptreact"
  },
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "zenMode.centerLayout": true,
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": true,
  "zenMode.showTabs": "single",
  "zenMode.silentNotifications": false,

  "telemetry.telemetryLevel": "off",

  // Symbols
  "symbols.hidesExplorerArrows": true,
  "symbols.folders.associations": {
    ".next": "folder-vercel",
    "schemas": "folder-database",
    "reducers": "folder-redux-reducer",
    "server": "folder-database",
    "components": "folder-assets",
    "_components": "folder-assets",
    "(app)": "folder-app",
    "(auth)": "folder-auth",
    "bruno": "folder-bruno"
  },

  // indent-rainbow
  "indentRainbow.colors": [
    "rgba(3, 4, 94, 0.125)",
    "rgba(2, 62, 138, 0.125)",
    "rgba(0, 119, 182, 0.125)",
    "rgba(0, 150, 199, 0.125)",
    "rgba(0, 180, 216, 0.125)",
    "rgba(72, 202, 228, 0.125)",
    "rgba(144, 224, 239, 0.125)",
    "rgba(173, 232, 244, 0.125)",
    "rgba(202, 240, 248, 0.125)"
  ],

  // Custom UI Style
  "custom-ui-style.electron": {
    "frame": false
  },
  "custom-ui-style.external.imports": [
    "file:///D:/code/dotfiles/vscode-nvim/vscode/styles/general.css"
  ],

  // VSCode Animations
  "animations.Install-Method": "Custom UI Style",
  "animations.Enabled": false,
  "animations.CursorAnimation": true,
  "animations.UseCursorColorForCursorAnimation": true,

  // Which Key
  "whichkey.showButtons": false,
  "whichkey.bindings": [
    {
      "key": " ",
      "name": "Find file",
      "type": "command",
      "command": "workbench.action.quickOpen"
    },
    {
      "key": "p",
      "name": "Command palette",
      "type": "command",
      "command": "workbench.action.showCommands"
    },
    {
      "key": "e",
      "name": "Explorer",
      "type": "command",
      "command": "workbench.view.explorer"
    },
    {
      "key": "t",
      "name": "Terminal",
      "type": "command",
      "command": "workbench.action.terminal.toggleTerminal"
    },
    {
      "key": "f",
      "name": "+file/find",
      "type": "bindings",
      "bindings": [
        {
          "key": "f",
          "name": "Find file",
          "type": "command",
          "command": "workbench.action.quickOpen"
        },
        {
          "key": "b",
          "name": "Find buffer",
          "type": "command",
          "command": "workbench.action.showAllEditors"
        },
        {
          "key": "w",
          "name": "Find window",
          "type": "command",
          "command": "workbench.action.switchWindow"
        },
        {
          "key": "r",
          "name": "Recent files",
          "type": "command",
          "command": "workbench.action.openRecent"
        },
        {
          "key": "n",
          "name": "New File",
          "type": "command",
          "command": "workbench.action.files.newUntitledFile"
        }
      ]
    },
    {
      "key": "s",
      "name": "+search",
      "type": "bindings",
      "bindings": [
        {
          "key": "s",
          "name": "Workspace symbol",
          "type": "command",
          "command": "workbench.action.showAllSymbols"
        },
        {
          "key": "g",
          "name": "Grep",
          "type": "command",
          "command": "workbench.action.findInFiles"
        }
      ]
    },
    {
      "key": "\t",
      "name": "+tabs",
      "type": "bindings",
      "bindings": [
        {
          "key": "d",
          "name": "Close tab (editor group)",
          "type": "command",
          "command": "workbench.action.closeEditorsAndGroup"
        },
        {
          "key": "D",
          "name": "Close all tabs (editor groups)",
          "type": "command",
          "command": "workbench.action.closeAllGroups"
        },
        {
          "key": "o",
          "name": "Close other tabs (editor groups)",
          "type": "command",
          "command": "workbench.action.closeEditorsInOtherGroups"
        }
      ]
    },
    {
      "key": "w",
      "name": "+windows",
      "type": "bindings",
      "bindings": [
        {
          "key": "n",
          "name": "New window",
          "type": "command",
          "command": "workbench.action.newWindow"
        },
        {
          "key": "r",
          "name": "Reload window",
          "type": "command",
          "command": "workbench.action.reloadWindow"
        },
        {
          "key": "-",
          "name": "Split window below",
          "type": "command",
          "command": "workbench.action.splitEditorDown"
        },
        {
          "key": "|",
          "name": "Split window right",
          "type": "command",
          "command": "workbench.action.splitEditorRight"
        }
      ]
    },
    {
      "key": "b",
      "name": "+buffer",
      "type": "bindings",
      "bindings": [
        {
          "key": "d",
          "name": "Delete buffer (editor)",
          "type": "command",
          "command": "workbench.action.closeActiveEditor"
        },
        {
          "key": "o",
          "name": "Delete other buffers (editors)",
          "type": "command",
          "command": "workbench.action.closeOtherEditors"
        },
        {
          "key": "b",
          "name": "Switch to other buffer (editor)",
          "type": "commands",
          "commands": [
            "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
            "list.select"
          ]
        }
      ]
    },
    {
      "key": "c",
      "name": "+code/chat",
      "type": "bindings",
      "bindings": [
        {
          "key": "c",
          "name": "Open chat",
          "type": "command",
          "command": "workbench.action.chat.open"
        },
        {
          "key": "a",
          "name": "Code action",
          "type": "command",
          "command": "editor.action.quickFix"
        },
        {
          "key": "f",
          "name": "Format",
          "type": "command",
          "command": "editor.action.formatDocument"
        },
        {
          "key": "F",
          "name": "Format & fix",
          "type": "commands",
          "commands": ["editor.action.formatDocument", "eslint.executeAutofix"]
        },
        {
          "key": "r",
          "name": "Rename symbol",
          "type": "command",
          "command": "editor.action.rename"
        }
      ]
    },
    {
      "key": "g",
      "name": "+git",
      "type": "bindings",
      "bindings": [
        {
          "key": "g",
          "name": "Open git view",
          "type": "command",
          "command": "workbench.view.scm"
        },
        {
          "key": "l",
          "name": "View git log",
          "type": "command",
          "command": "git.viewHistory"
        },
        {
          "key": "h",
          "name": "View file history",
          "type": "command",
          "command": "git.viewFileHistory"
        },
        {
          "key": "b",
          "name": "Git blame",
          "type": "command",
          "command": "git.toggleFileBlame"
        },
        {
          "key": "B",
          "name": "Git browse (open)",
          "type": "command",
          "command": "github.openOnGitHubFileFromSelection"
        }
      ]
    },
    {
      "key": "d",
      "name": "+debug/dictionaries",
      "type": "bindings",
      "bindings": [
        {
          "key": "d",
          "name": "Start",
          "type": "command",
          "command": "workbench.action.debug.start"
        },
        {
          "key": "b",
          "name": "Toggle breakpoint",
          "type": "command",
          "command": "editor.debug.action.toggleBreakpoint"
        },
        {
          "key": "c",
          "name": "Continue",
          "type": "command",
          "command": "workbench.action.debug.continue"
        },
        {
          "key": "i",
          "name": "Step into",
          "type": "command",
          "command": "workbench.action.debug.stepInto"
        },
        {
          "key": "o",
          "name": "Step over",
          "type": "command",
          "command": "workbench.action.debug.stepOver"
        },
        {
          "key": "t",
          "name": "Step out",
          "type": "command",
          "command": "workbench.action.debug.stepOut"
        },
        {
          "key": "r",
          "name": "Restart",
          "type": "command",
          "command": "workbench.action.debug.restart"
        },
        {
          "key": "q",
          "name": "Stop debugging",
          "type": "command",
          "command": "workbench.action.debug.stop"
        },
        {
          "key": "n",
          "name": "Next diagnostic",
          "type": "command",
          "command": "editor.action.marker.next"
        },
        {
          "key": "p",
          "name": "Previous diagnostic",
          "type": "command",
          "command": "editor.action.marker.prev"
        },
        {
          "key": "a",
          "name": "Add word to CSpell config",
          "type": "command",
          "command": "cSpell.addWordToCSpellConfig"
        },
        {
          "key": "u",
          "name": "Add word to user settings",
          "type": "command",
          "command": "cSpell.addWordToUserSettings"
        }
      ]
    },
    {
      "key": "x",
      "name": "+diagnostics/transform",
      "type": "bindings",
      "bindings": [
        {
          "key": "q",
          "name": "Quickfix list",
          "type": "command",
          "command": "workbench.actions.view.problems"
        },
        {
          "key": "x",
          "name": "Toggle problems panel",
          "type": "command",
          "command": "workbench.actions.view.toggleProblems"
        },
        {
          "key": "c",
          "name": "Transform to camelCase",
          "type": "command",
          "command": "editor.action.transformToCamelcase"
        },
        {
          "key": "k",
          "name": "Transform to kebab-case",
          "type": "command",
          "command": "editor.action.transformToKebabcase"
        },
        {
          "key": "P",
          "name": "Transform to PascalCase",
          "type": "command",
          "command": "editor.action.transformToPascalcase"
        },
        {
          "key": "s",
          "name": "Transform to snake_case",
          "type": "command",
          "command": "editor.action.transformToSnakecase"
        },
        {
          "key": "S",
          "name": "Transform to UPPER_SNAKE_CASE",
          "type": "commands",
          "commands": [
            "editor.action.transformToSnakecase",
            "editor.action.transformToUppercase"
          ]
        },
        {
          "key": "T",
          "name": "Transform to Title Case",
          "type": "command",
          "command": "editor.action.transformToTitlecase"
        }
      ]
    },
    {
      "key": "u",
      "name": "+ui",
      "type": "bindings",
      "bindings": [
        {
          "key": "b",
          "name": "Toggle sidebar",
          "type": "command",
          "command": "workbench.action.toggleSidebarVisibility"
        },
        {
          "key": "a",
          "name": "Toggle auxiliary bar",
          "type": "command",
          "command": "workbench.action.toggleAuxiliaryBar"
        },
        {
          "key": "t",
          "name": "Toggle status bar",
          "type": "command",
          "command": "workbench.action.toggleStatusbarVisibility"
        },
        {
          "key": "c",
          "name": "Toggle activity bar",
          "type": "command",
          "command": "workbench.action.toggleActivityBarVisibility"
        },
        {
          "key": "z",
          "name": "Toggle Zen mode",
          "type": "command",
          "command": "workbench.action.toggleZenMode"
        },
        {
          "key": "x",
          "name": "Open extensions",
          "type": "command",
          "command": "workbench.view.extensions"
        },
        {
          "key": "s",
          "name": "Open settings",
          "type": "command",
          "command": "workbench.action.openSettings"
        },
        {
          "key": "r",
          "name": "+reset",
          "type": "bindings",
          "bindings": [
            {
              "key": "r",
              "name": "Redraw",
              "type": "command",
              "command": "vscode-neovim.restart"
            },
            {
              "key": "b",
              "name": "Reset sidebar size",
              "type": "command",
              "command": "mc.resetSidebarSize"
            },
            {
              "key": "a",
              "name": "Reset auxiliarybar size",
              "type": "command",
              "command": "mc.resetAuxiliarybarSize"
            },
            {
              "key": "p",
              "name": "Reset panel size",
              "type": "command",
              "command": "mc.resetPanelSize"
            },
            {
              "key": "l",
              "name": "Reset layout size",
              "type": "commands",
              "commands": [
                "mc.resetSidebarSize",
                "mc.resetAuxiliarybarSize",
                "mc.resetPanelSize"
              ]
            }
          ]
        }
      ]
    },
    {
      "key": "q",
      "name": "+quit",
      "type": "bindings",
      "bindings": [
        {
          "key": "q",
          "name": "Quit",
          "type": "commands",
          "commands": [
            "workbench.action.closeAuxiliaryBar",
            "workbench.action.closeWindow"
          ]
        },
        {
          "key": "a",
          "name": "Quit all",
          "type": "commands",
          "commands": [
            "workbench.action.closeAuxiliaryBar",
            "workbench.action.closeAllGroups",
            "workbench.action.closeWindow"
          ]
        }
      ]
    },
    {
      "key": "`",
      "name": "Switch to other buffer (editor)",
      "type": "commands",
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
        "list.select"
      ]
    },
    {
      "key": ".",
      "name": "Repeat most recent action",
      "type": "command",
      "command": "whichkey.repeatMostRecent"
    },
    {
      "key": "?",
      "name": "Search keybindings",
      "type": "command",
      "command": "whichkey.searchBindings"
    }
  ],

  // Multi Command
  "multiCommand.commands": [
    {
      "command": "mc.resetSidebarSize",
      "sequence": [
        "workbench.action.focusSideBar",
        { "command": "workbench.action.decreaseViewSize", "repeat": 10 },
        { "command": "workbench.action.increaseViewSize", "repeat": 2 },
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    {
      "command": "mc.resetAuxiliarybarSize",
      "sequence": [
        "workbench.action.focusAuxiliaryBar",
        { "command": "workbench.action.decreaseViewSize", "repeat": 10 },
        { "command": "workbench.action.increaseViewSize", "repeat": 7 },
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    {
      "command": "mc.resetPanelSize",
      "sequence": [
        "workbench.action.focusPanel",
        { "command": "workbench.action.decreaseViewSize", "repeat": 10 },
        { "command": "workbench.action.increaseViewSize", "repeat": 6 },
        "workbench.action.focusActiveEditorGroup"
      ]
    }
  ]
}
