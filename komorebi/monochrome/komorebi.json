{
  "$schema": "https://cdn.jsdelivr.net/gh/LGUG2Z/komorebi@latest/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/../applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "mouse_follows_focus": false,
  "default_workspace_padding": 0,
  "default_container_padding": 0,
  "transparency": false,
  "transparency_alpha": 220,
  "border": true,
  "border_style": "Square",
  "border_width": 3,
  "border_offset": -1,
  "border_colours": {
    "single": "#ececec",
    "unfocused": "#6c7086",
    "floating": "#ececec"
  },
  "stackbar": {
    "height": 30,
    "mode": "Never",
    "label": "Title",
    "tabs": {
      "width": 450,
      "font_family": "JetBrainsMono NFP"
    }
  },
  "animation": {
    "enabled": true,
    "duration": 150,
    "fps": 120,
    "style": {
      "movement": "EaseInOutQuad",
      "transparency": "Linear"
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "BSP"
        },
        {
          "name": "2",
          "layout": "BSP"
        },
        {
          "name": "3",
          "layout": "BSP"
        },
        {
          "name": "4",
          "layout": "BSP"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "BSP"
        },
        {
          "name": "2",
          "layout": "BSP"
        },
        {
          "name": "3",
          "layout": "BSP"
        },
        {
          "name": "4",
          "layout": "BSP"
        }
      ]
    }
  ],
  "ignore_rules": [
    {
      "kind": "Exe",
      "id": "explorer.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Clock",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "navicat.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Photos.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "WinRAR.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Overwolf.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "UltraViewer_Desktop.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "pythonw.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "PowerToys.Settings.exe",
      "matching_strategy": "Equals"
    }
  ]
}
